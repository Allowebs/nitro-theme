<div class="product-overview page-width">
  <h2 class="title h1 scroll-trigger animate--slide-in" data-cascade style="--animation-order:1;">Overview</h2>
  <div class="product-overview__grid">
    
    {% assign zone_prefix = 'z' %}
    {% assign field = product.metafields.custom.product_overview.value %}
    {% for i in (1..4) %}
      
      {% liquid
        assign zone_id = zone_prefix | append: i
        assign header_key = zone_id | append: '_header'
        assign content_key = zone_id | append: '_content'
        assign additional_key = zone_id | append: '_additional'
        assign image_key = zone_id | append: '_image'
        assign header = field[header_key]
        assign content = field[content_key]
        assign additional = field[additional_key]
        assign image = field[image_key]
      %}

      <div class="zone {{ zone_id }}">
        <h2>{{ header.value }}</h2>
        <p>{{ content.value }}</p>
        <p>{{ additional.value }}</p>
        <img src="{{ image.value | image_url }}" alt="{{ header }}">
      </div>
    {% endfor %}
    
  </div>
</div>
