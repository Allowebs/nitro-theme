{% style %}
  /* Instock, Backorder, and Bundle Alerts */
  .instock-alert {
      border-left: 5px solid #09BC8A;
      background-color: rgb(9 188 138 / 20%);
  }
  
  .backorder-alert {
      border-left: 5px solid #FFD213;
      background-color: rgb(255 210 19 / 20%);
  }
  
  .backorder-alert, .instock-alert {
      margin: 2rem 0;
      padding: 1rem 2.5rem;
      color: #484848;
      border-radius: 0 5px 5px 0;
      font-size: small;
  }

  .product-alert__container {
    
  }

  .product-alert__title {
    display: flex;
    align-items: center;
    gap: 5px;
    line-height: normal;
    font-size: 15px;
    margin-bottom: 15px;
  }

  .product-alert__title svg {
    height: 25px;
    width: auto;
    vertical-align: middle;
  }
{% endstyle %}

{% liquid
  if product.metafields.custom.in_stock_alert or product.metafields.custom.backorder_alert or product.metafields.custom.promo_alert
    echo '<div class="product-alert__container">'
    
    if product.metafields.custom.in_stock_alert
      echo '<div class="instock-alert">' | append: product.metafields.custom.in_stock_alert | append: '</div>'
    endif
  
    if product.metafields.custom.backorder_alert
      echo '<div class="backorder-alert">' | append: product.metafields.custom.backorder_alert | append: '</div>'
    endif
  
    if product.metafields.custom.promo_alert
      echo '<div class="product-alert alert alert--promo">'
      echo product.metafields.custom.promo_alert
      echo '</div>'
    endif
  
    echo '</div>'
  endif
%}