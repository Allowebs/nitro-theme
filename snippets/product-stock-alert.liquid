{% style %}
  /* Instock, Backorder, and Bundle Alerts */
  .instock-alert {
      border-left: 5px solid #09BC8A;
      background-color: rgb(9 188 138 / 20%);
  }
  
  .backorder-alert {
      border-left: 5px solid #FFD213;
      background-color: rgb(255 210 19 / 20%);
  }
  
  .backorder-alert, .instock-alert {
      margin: 2rem 0;
      padding: 1rem 2.5rem;
      color: #484848;
      border-radius: 0 5px 5px 0;
      font-size: small;
  }

  .product-alert.alert {
    padding: 1em;
    border: 2px dashed;
    border-radius: 10px;
  }

  .product-alert__title {
    display: flex;
    align-items: center;
    gap: 5px;
    line-height: normal;
    font-size: 15px;
    margin-bottom: 15px;
  }

  .alert__title svg {
    height: 25px;
    width: auto;
    vertical-align: middle;
  }

  .alert--promo {
    border-color: #e17ab6;
    background-color: #f5f0f3;
  }
{% endstyle %}

{%- if product.metafields.custom.in_stock_alert or product.metafields.custom.backorder_alert or product.metafields.custom.promo_alert -%}
  <div class="product-alert__container">
    
    {%- if product.metafields.custom.in_stock_alert -%}
      <div class="instock-alert">{{ product.metafields.custom.in_stock_alert }}</div>
    {%- endif -%}

    {%- if product.metafields.custom.backorder_alert -%}
      <div class="instock-alert">{{ product.metafields.custom.backorder_alert }}</div>
    {%- endif -%}

    {%- if product.metafields.custom.promo_alert -%}
      <div class="product-alert alert alert--promo">
        <span class="alert__title">{% render 'icon-bundle' %} Bundle and save:</span>
        <p>{{ product.metafields.custom.promo_alert }}</p>
      </div>
    {%- endif -%}

  </div>
      
{%- endif -%}